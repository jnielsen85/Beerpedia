<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>

  <%= f.label :description, 'Description' %>
  <%= f.text_area :description %>

  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>

  <%= f.label :directions, 'Method' %>
  <%= f.text_area :directions %>

  <%= f.label :equipment, 'Equipment' %>
  <%= f.text_area :equipment %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.submit %>
<% end %>
