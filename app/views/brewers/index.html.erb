<h1>All Brewers</h1>
<% @brewers.each do |brewer| %>
  <div>
    <div>
    <%= image_tag brewer.image, :class => 'thumb', :alt => brewer.name if brewer.image.present?  %>
    </div>
    <div>
      <ul>
        <li><%= link_to brewer.name, brewer %></li>
        <li><%= brewer.specialty %></li>
      </ul>
    </div>
  </div>
<% end %>
